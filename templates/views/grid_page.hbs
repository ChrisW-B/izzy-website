{{>header}}
<h1 class="page-title">{{title}}</h1>
<div class="page-contents">
  <div class="blog">
    {{# each data.posts.results}}
      <button data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post" data-featherlight=".{{slug}}" onclick='createSlideshow("{{slug}}", {{{generateImageArray images title ../section slug content width=1400 height=1400 crop='fit'}}})'>
        <div class="post-images">
          {{# each images as |image|}}
            <img src="{{{cloudinaryUrl image width=375 crop='fit'}}}" />
            {{/each}}
        </div>
        <div class="post-info">
          <p class="title">{{{title}}}</p>
        </div>
      </button>
      {{/each}}
  </div>
  {{>pagination}}
  {{# each data.posts.results}}
    <div class="ajaxcontent lightbox">
      <ul class="lightbox-images {{slug}}" />
    </div>
    {{/each}}
</div>
{{>grid}}
