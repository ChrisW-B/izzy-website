{{>jquery}}
<script src="/js/masonry.min.js"></script>
<script src="/js/imagesloaded.min.js"></script>
<script>
const $grid = $('.blog').masonry({
  itemSelector: '.post',
  fitWidth: true
});
$(window).resize(() => $grid.masonry('layout'));
$grid.imagesLoaded().progress(() => $grid.masonry('layout'));
</script>
